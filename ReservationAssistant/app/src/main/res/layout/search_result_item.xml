<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/et_hint"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_apply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="姓名："/>

                <TextView
                    android:id="@+id/tv_apply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="xxx"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_ic_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="身份证号："/>

                <TextView
                    android:id="@+id/tv_id_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="xxxxxxxxxxxxxx"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_apply_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="申请日期："/>

                <TextView
                    android:id="@+id/tv_apply_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="1970-01-01"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_apply_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="状态："/>

                <TextView
                    android:id="@+id/tv_apply_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="未知"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_meeting_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="会见时间："/>

                <TextView
                    android:id="@+id/tv_meeting_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_mid"
                    android:textSize="@dimen/search_main_text_size"
                    android:text="1970-01-01"/>
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>